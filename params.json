div{
    padding: 2%
}

.header{
    background-color:pink;
    width:100%;
    height: 200px;
    line-height: 200px;
    text-align: center;
}

.nav{
    background-color:yellow;
    width:100%;
    height: 40px;
    line-height: 20px;
    text-align: center;
}

.sidebar{
    background-color:blue;
    float:left;
    width:25%;
    height: 800px;
    line-height: 800px;
    text-align: center;
}

.main{
    background-color:green;
    width:100%;
    height: 800px;
    line-height: 800px;
    text-align: center;
}

.footer{
    background-color:orange;
    width:100%;
    height: 20px;
    line-height: 20px;
    text-align: center;
}

ul.nav>li {
	width: 20%;
    background: #fff;
    text-align: center;
    display: inline-block;
    position: relative;
    margin: -2px;
    padding: .5em 3px;
    box-sizing: border-box;
}

.submenu {
    background: #ff6;
    width: 200px;
    padding: 0px;
    border-radius: 5px;
    position: absolute;
    left: -1px;
    top: 100%;
    display: none;
}

.submenu li{
    list-style-type: none;
    border-top: 1px solid #fff;
    padding: .5em 15px;
    cursor: pointer;
}


.nav>li:hover .submenu{
    display: block;
}

.submenu li:hover {
	background-color: #fff;
	color: #00f;
}

.absolute {
  position: fixed;
  background: red;
  top: 800px;
  right: 50px;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  color: white;
  text-align: center;
}
